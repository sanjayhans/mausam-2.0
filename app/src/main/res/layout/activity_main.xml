<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/layout_margin_padding"
    tools:context=".MainActivity">

    <include
        android:id="@+id/layout_view_weather"
        layout="@layout/layout_view_weather" />

    <include
        android:id="@+id/layout_weather_info"
        layout="@layout/layout_weather_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_marginTop_padding"
        app:layout_constraintTop_toBottomOf="@id/layout_view_weather" />

    <include
        android:id="@+id/layout_weather_additional"
        layout="@layout/layout_weather_additional_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_padding"
        app:layout_constraintTop_toBottomOf="@id/layout_weather_info" />

    <include
        android:id="@+id/layout_sunset_sunrise"
        layout="@layout/layout_sunrise_sunset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Invalid App ID"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/output_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="layout_weather_info,layout_weather_additional,layout_sunset_sunrise"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>
